<Page
    x:Class="Heist.SignUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.15*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.30*"/>
                <ColumnDefinition Width="0.70*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="1" Foreground="Black" TextWrapping="Wrap" Text="Publisher Name" FontSize="30" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="2" Foreground="Black" TextWrapping="Wrap" Text="Mobile" FontSize="30" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="3" Foreground="Black" TextWrapping="Wrap" Text="User Name" FontSize="30" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="4" Foreground="Black" TextWrapping="Wrap" Text="Password" FontSize="30" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" Grid.Row="5" Foreground="Black" TextWrapping="Wrap" Text="E-Mail" FontSize="30" VerticalAlignment="Center"/>


            <TextBox x:ConnectionId='1' x:Name="Name" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1"  TextWrapping="Wrap" PlaceholderText="Enter Name" Background="Transparent" BorderBrush="Red" BorderThickness="0,0,0,5" FontSize="30" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='2' x:Name="Mobile" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" PlaceholderText="Enter Mobile" InputScope="TelephoneNumber" Background="Transparent" BorderBrush="Red" BorderThickness="0,0,0,5" FontSize="30" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='3' x:Name="UserName" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="3" TextWrapping="Wrap" PlaceholderText="Enter User Name" Background="Transparent" BorderBrush="Red" BorderThickness="0,0,0,5" FontSize="30" VerticalAlignment="Center"/>
            <PasswordBox x:ConnectionId='4' x:Name="Password" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" PlaceholderText="Enter Password" Background="Transparent" BorderBrush="Red" BorderThickness="0,0,0,5" FontSize="30" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='5' x:Name="Email" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="5" TextWrapping="Wrap" PlaceholderText="Enter Email" InputScope="EmailNameOrAddress" Background="Transparent" BorderBrush="Red" BorderThickness="0,0,0,5" FontSize="30" VerticalAlignment="Center"/>

            <Button x:ConnectionId='6' Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Content="Register" Foreground="blue" Margin="0,0,10,0" Background="Transparent" FontSize="30"                     />

        </Grid>
    </Grid>
</Page>

